<!doctype html>
<html class="no-js" lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Foundation for Sites</title>
  <link rel="stylesheet" href="css/foundation.css">
  <link rel="stylesheet" href="css/app.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>


  <div class="grid-x grid-padding-x">
    <div class="large-12 cell">
      <h1>The Tech Blog</h1>
    </div>
  </div>


  <div class="title-bar" data-responsive-toggle="example-menu" data-hide-for="medium">
    <button class="menu-icon" type="button" data-toggle="example-menu"></button>
    <div class="title-bar-title">
      <h4>MENU</h4>
    </div>
  </div>

  <div class="top-bar grid-x grid-padding-x" id="example-menu">
    <div class="top-bar-left large-12 cell">
      <ul class="dropdown menu " data-dropdown-menu>
        <li><a href="#">
            <h3>HOME</h3>
          </a></li>
        <li><a href="#">
            <h3>DASHBOARD</h3>
          </a></li>
        <li><a href="#">
            {{#if logged_in}}
            <a href="/dashboard">profile</a> |
            <button class="no-button" id="logout">logout</button>
            {{else}}
            <a href="/login">login</a>
            {{/if}}
          </a></li>
      </ul>
    </div>
  </div>

      {{{ body }}}


  <script src="js/vendor/jquery.js"></script>
  <script src="js/vendor/what-input.js"></script>
  <script src="js/vendor/foundation.js"></script>
  <script src="js/app.js"></script>
  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

</body>

</html>








<!-- Conditionally render login or logout links -->
